    <div class="search-container">
        <form class="job-search">
            <input type="text" placeholder="Job Title" id="title" name="job-title">
            <input type="text" placeholder="Location" id="location" name="location">
            <select  id="qualification" name="qualification">
                <option value="Search By Position">Search By Position</option>
                <option value="Front End">Front End</option>
                <option value="Back End">Back End</option>
                <option value="Full Stack">Full Stack</option>
            </select>
            <button type="submit" class="btn">Search</button>
        </form>
    </div>

    <div id="search-results"></div>
</div>

    <div>
        <h2>Job Listings</h2>
        {{#each jobsFour as |job|}}
        <div class="cards-containerj">
            <div class="cardj">
                <a href="/job/{{job.id}}">
                <h2>{{job.title}}</h2>
                <p>{{job.location}}</p>
                <p>Position: {{job.qualification}}</p>
                </a>
            </div>
        </div>
        {{/each}}

    </div>
</div>
